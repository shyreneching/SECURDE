<body>
    <!-- Following Menu -->
    <!-- <div class="ui large top fixed hidden menu">
        <div class="ui container">
            <a class="active item">Books</a>
            <a class="item">Profile</a>
            <a class="item">Login</a>
        </div>
    </div> -->

    <!-- Sidebar Menu -->
    <div class="ui vertical inverted sidebar menu">
        <a class="active item">Books</a>
        <a class="item" href="/profile">Profile</a>
        <a class="item" href="/logout">Logout</a>
    </div>

    <div class="container-main">
        <div class="ui vertical masthead center aligned segment">
            <div class="ui mobile stackable grid" style="width: inherit;">
                <div class="left aligned row" style="width: fit-content;">
                    <div class="four wide left aligned computer only column">
                        <div class="ui center aligned page image">
                            <img class="center" src="/img/logo_gold_big.png" alt="Logo Failed To Load"
                                style="width: 12em; height: 12em; margin-bottom: -8em; margin-left: 10em; margin-top: 0em;">
                        </div>
                    </div>
                    <div class="ui container">
                        <div class="ui large inverted secondary pointing six wide column menu"
                            style="border-color: transparent; background-color: transparent;">
                            <a class="toc item">
                                <i class="sidebar icon"></i>
                            </a>
                            <div class="ui center aligned container" style="width: min-content;">
                                <a class="active item">Books</a>
                                <a class="item" href="/profile">Profile</a>
                                <a class="item" href="/logout">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="ui container" style="margin-top: 5%; width: 70%;">
        <table class="ui sortable selectable celled table" id="data-table">
            <thead>
                <tr>
                    <th class="sorted ascending" id="table-header">Book Title</th>
                    <th id="table-header">Author/s</th>
                    <th class="" id="table-header">ISBN</th>
                    <th class="" id="table-header">Call Number</th>
                    <th class="" id="table-header">Manage</th>
                </tr>
            </thead>
            <tbody>
                {{#each books}}
                <tr class="book-row" data-id="{{_id}}">
                    <td class="author"><a href="/book?data_id={{_id}}">{{title}}</a></td>
                    <td>
                    {{#each author}}
                    {{#if @index}}, {{/if}}
                    {{firstname}} {{lastname}}
                    {{/each}}
                    </td>
                    <td>{{isbn}}</td>
                    <td>{{callNumber}}</td>
                    <td class="ui computer only" id="td-manage" style="max-width: 150px;">
                        <div class="ui tiny yellow labeled icon edit button" id="button-edit"><i class="edit icon"></i>
                            Edit
                        </div>
                        <div class="ui tiny labeled icon delete button" id="button-delete"><i class="trash icon"></i>
                            Delete
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="5">
                        <div class="ui right floated small labeled icon button" id="button-add">
                            <i class="book icon"></i> Add Book
                        </div>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>

    <!-- Add Book Modal -->
    <div class="ui small middle aligned scrolling coupled modal" id="modal-addbook" style="overflow-y: scroll; overflow-x: hidden; max-height: 80%">
        <div class="header">
            Add Book
        </div>
        <div class="content">
            <form class="ui small form" id="form-addbook" action="/manager/addBook" method="POST">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left input">
                            <input type="text" name="book_title" placeholder="Book Title">
                        </div>
                    </div>
                    <div class="field grid">
                        <div class="row">
                            <div class="ui multiple search selection dropdown field" id="dropdown-addbookauthors" style="width: 75%;">
                            <input type="hidden" name="book_author">
                            <div class="default text">Select Author/s</div>
                            <i class="dropdown icon"></i>
                            <div class="menu" id="auth-menu">
                                {{!-- <div class="item" data-value="{{author.name}}" index="{{something}}" ng-repeat="char in chars">{{author.name}}</div> --}}
                                {{#each authors}}
                                <div class="item" data-value="{{_id}}">{{firstname}} {{lastname}}</div>
                                {{/each}}
                            </div>
                            </div>
                            <div class="ui right floated labeled icon button field" id="button-addauthor">
                            <i class="user plus icon"></i> Add Author
                            </div>
                        </div>
                    </div>
                    <div class="field" style="padding-left: 0.5em; padding-right: 0.5em;">
                        <div class="two fields">
                            <div class="field">
                                <div class="ui left input">
                                    <input type="text" name="book_publisher" placeholder="Publisher">
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui left input">
                                    <input type="text" name="book_yearofpublication" placeholder="Year of Publication">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left input">
                            <input type="text" name="book_isbn" placeholder="ISBN">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left input">
                            <input type="text" name="book_callnumber" placeholder="Call Number">
                        </div>
                    </div>
                    <!-- <div class="field" style="padding-left: 0.5em; padding-right: 0.5em;">
                        <div class="two fields">
                            <div class="field">
                                <div class="ui calendar" id="date_picker-dateadded">
                                    <div class="ui input left icon">
                                        <i class="calendar icon"></i>
                                        <input type="text" placeholder="Date Added">
                                    </div>
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui selection dropdown">
                                    <input type="hidden" name="status">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">Status</div>
                                    <div class="menu">
                                        <div class="item" data-value="status_available">Available</div>
                                        <div class="item" data-value="status_reserved">Reserved</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> -->
                    <div class="actions">
                        <div class="two fields" style="margin-top: 1.2em; padding-left: 0.5em; padding-right: 0.5em;">
                            <div class="ui yellow cancel button field" style="background: rgb(145, 145, 145); margin-right: 1em;">Cancel</div>
                            <div class="ui yellow submit button field" id="button-confirmaddbook" style="background: rgb(184, 164, 56);">
                                Add Book</div>
                        </div>
                    </div>
                </div>
                <div class="ui error message" id="warnings"></div>
            </form>
        </div>
    </div>

    <!-- Edit Book Modal -->
    <div class="ui small middle aligned scrolling coupled modal" id="modal-editbook" style="overflow-y: scroll; overflow-x: hidden; max-height: 80%">
        <div class="header">
            Edit Book
        </div>
        <div class="content">
            <form class="ui small form" id="form-editbook" action="/manager/editBook" method="POST">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left input">
                            <input type="text" name="editbook_title" placeholder="Book Title">
                        </div>
                    </div>
                    <div class="field grid">
                        <div class="row">
                            <div class="ui multiple search selection dropdown field" id="dropdown-editbookauthors" style="width: 75%;">
                            <input type="hidden" name="editbook_author">
                            <div class="default text">Select Author/s</div>
                            <i class="dropdown icon"></i>
                            <div class="menu" id="auth-menu2">
                                {{!-- <div class="item" data-value="{{author.name}}" index="{{something}}" ng-repeat="char in chars">{{author.name}}</div> --}}
                                {{#each authors}}
                                <div class="item" data-value="{{_id}}">{{firstname}} {{lastname}}</div>
                                {{/each}}
                            </div>
                            </div>
                            <div class="ui right floated labeled icon button field" id="button-editaddauthor">
                            <i class="user plus icon"></i> Add Author
                            </div>
                        </div>
                    </div>
                    <div class="field" style="padding-left: 0.5em; padding-right: 0.5em;">
                        <div class="two fields">
                            <div class="field">
                                <div class="ui left input">
                                    <input type="text" name="editbook_publisher" placeholder="Publisher">
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui left input">
                                    <input type="text" name="editbook_yearofpublication"
                                        placeholder="Year of Publication">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left input">
                            <input type="text" name="editbook_callnumber" placeholder="Call Number">
                        </div>
                    </div>
                    <div>
                        <div>
                            <input type="hidden" name="editbook_id">
                        </div>
                    </div>
                    {{!-- <div class="field">
                        <div class="ui calendar" id="editdate_picker">
                            <div class="ui input left icon">
                                <i class="calendar icon"></i>
                                <input type="text" name="editbook_dateadded" placeholder="Date Added">
                            </div>
                        </div>
                    </div> --}}
                    </div>
                    <!-- <div class="field" id="field-duedate">
                        <div class="ui calendar" id="date_picker-duedate">
                            <div class="ui input left icon">
                                <i class="calendar icon"></i>
                                <input type="text" placeholder="Due Date">
                            </div>
                        </div>
                    </div> -->
                    <div class="actions">
                        <div class="two fields" style="margin-top: 1.2em; padding-left: 0.5em; padding-right: 0.5em;">
                            <div class="ui yellow cancel button field" style="background: rgb(145, 145, 145); margin-right: 1em;">
                                Cancel</div>
                            <div class="ui yellow submit button field" id="button-confirmeditbook"
                                style="background: rgb(184, 164, 56);">
                                Edit Book</div>
                        </div>
                    </div>
                <div class="ui error message" id="warnings"></div>
            </form>
        </div>
    </div>

    <!-- Delete Book Modal -->
    <div class="ui small basic modal" id="modal-deletebook">
        <div class="header">
            Delete Book
        </div>
        <div class="content">
            Are you sure you want to delete this book?
        </div>
        <div class="actions">
            <div class="ui red basic cancel inverted button">
                <i class="remove icon"></i>
                No
            </div>
            <div class="ui green ok right inverted button" id="button-deletebook">
                <i class="checkmark icon"></i>
                Yes
            </div>
        </div>
    </div>

    <!-- Add Author Modal -->
    <div class="ui small middle aligned coupled modal" id="modal-addauthor">
        <div class="header">
            Add Author
        </div>
        <div class="content">
            <form class="ui small form" id="form-addauthor">
                <div class="ui stacked segment">
                    <div class="field" style="padding-left: 0.5em; padding-right: 0.5em;">
                        <div class="two fields">
                            <div class="field">
                                <div class="ui left input">
                                    <input type="text" name="author_firstname" placeholder="First Name" id="auth_firstname">
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui left input">
                                    <input type="text" name="author_lastname" placeholder="Last Name"  id="auth_lastname">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="actions">
                        <div class="two fields" style="margin-top: 1.2em; padding-left: 0.5em; padding-right: 0.5em;">
                            <div class="ui yellow cancel button field" id="button-canceladdauthor" style="background: rgb(145, 145, 145); margin-right: 1em;">Cancel</div>
                            <div class="ui yellow submit button field" id="button-confirmaddauthor" style="background: rgb(184, 164, 56);">
                                Add Author</div>
                        </div>
                    </div>
                </div>
                <div class="ui error message" id="warnings"></div>
            </form>
        </div>
    </div>

</body>

</html>