    <!-- Change Password Modal -->
    <div class="ui tiny scrolling modal" id="modal-changepassword">
        <i class="close icon"></i>
        <div class="header">
            Change Password
        </div>
        <div class="content">
            <form class="ui large form error" id="form-changepassword" action="/changepassword" method="POST">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input id="old-password" type="password" name="old_password" placeholder="Enter Old Password">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input id="new-password" type="password" name="new_password" placeholder="Enter New Password">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input id="confirm-new-password" type="password" name="confirm_new_password"
                            placeholder="Confirm New Password">
                    </div>
                </div>
                <div class="ui fluid large yellow submit button field" id="button-changepassword"
                    style="background: rgb(184, 164, 56);">Change
                    Password</div>
                <div class="ui error message" id="warnings"></div>
            </form>
        </div>
    </div>

    <!-- Return Borrowed Book Modal -->
    <div class="ui tiny scrolling modal" id="modal-borrowedbook">
